type User {
  id: ID! @unique
  userName: String! @unique
  email: String! @unique
  firstName: String @default(value:"")
  lastName: String!
  bio: String!
  posts:[Post!]!
  likes: [Like!]!
  comments: [Comment!]!
  followers:[User!]! @relation(name:"FollowRelation")
  following:[User!]! @relation(name:"FollowRelation")
}

type Post {
  location: String!
  caption: String!
  user:User!
  files:[File!]!
  likes : [Like!]!
  comments: [Comment!]!
}

type Like {
  user: User!
  post: Post!
}

type Comment {
  text: String!
  user: Post!
}

type File {
  url: String!
  post: Post!
}